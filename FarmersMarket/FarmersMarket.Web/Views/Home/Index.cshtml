@using FarmersMarket.Web.Infrastructure.Extensions
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner" style="max-width:100%;">
    <div class="carousel-item active">
      <img src="~/images/fruit-wallpaper.jpg" asp-append-version="true" alt="First slide"  style="max-width:100%;"/>
      <div class="carousel-caption d-none d-md-block">
        <h5>Assorted fruits</h5>
        <p>The best fruits in town.</p>
      </div>
    </div>
    <div class="carousel-item">
       <img src="~/images/vegetables-wallpaper.jpg" asp-append-version="true" alt="Second slide" style="max-width:100%;"/>
      <div class="carousel-caption d-none d-md-block">
        <h5>Assorted vegetables</h5>
        <p>Try our delicious vegetables.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/images/dairy-wallpaper.jpg" asp-append-version="true" alt="Third slide" style="max-width:100%;"/>
      <div class="carousel-caption d-none d-md-block">
        <h5>Assorted dairy</h5>
        <p>Our dairies are from a certified dairy producers.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/images/meats-wallpaper.jpg" asp-append-version="true" alt="Forth slide" style="max-width:100%;"/>
      <div class="carousel-caption d-none d-md-block">
        <h5>Assorted meats</h5>
        <p>The best steaks in town. Try it for yourself.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

