<footer class="footer-distributed">
        <div class="footer-left">
            <h3>Farmers<span> Market</span></h3>
            <p class="footer-links">
                <a asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                ·
                <a asp-area="" asp-controller="Farms" asp-action="All">@localizer["Farms"]</a>
                ·
                <a asp-area="" asp-controller="Products" asp-action="All">@localizer["Products"]</a>
                ·
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">@localizer["Admin"]</a>
                }
                else
                {
                    <a asp-area="" asp-controller="ShoppingCart" asp-action="Index">@localizer["Shopping cart"]</a>
                }
                ·
                <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
            </p>
            <p class="footer-company-name">Farmers Market &copy; @DateTime.UtcNow.Year</p>
        </div>
        <div class="footer-center">
            <div>
                <i class="fa fa-map-marker"></i>
                <p><span>21 Solunska str.</span> Sofia, Bulgaria</p>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <p>+359 877 690 171</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="mailto:konstantin1230@yahoo.com">konstantin1230@yahoo.com</a></p>
            </div>
        </div>
        <div class="footer-right">
            <p class="footer-company-about">
                <span>@localizer["About"]</span>
                @localizer["Company Info"]
            </p>
            <div class="footer-icons">
                <a href="https://www.facebook.com/konstantin.kirchev" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://twitter.com/konstantin1230" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="https://www.linkedin.com/in/konstantinkirchev" target="_blank"><i class="fab fa-linkedin"></i></a>
                <a href="https://github.com/KonstantinKirchev/" target="_blank"><i class="fab fa-github"></i></a>
            </div>
        </div>
</footer>
