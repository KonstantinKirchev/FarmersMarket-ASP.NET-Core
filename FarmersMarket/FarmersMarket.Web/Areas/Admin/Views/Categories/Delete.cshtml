@using FarmersMarket.Web.Infrastructure.Extensions
@using FarmersMarket.Models.ViewModels
@model CategoryViewModel

@{
    ViewData["Title"] = "Delete category";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Delete", "Delete", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-success" })
            @Html.ActionLink("Cancel", "Index", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-danger" })
        </div>
    }
</div>
