@using FarmersMarket.Web.Infrastructure.Extensions
@using FarmersMarket.Models.ViewModels
@model CategoryViewModel

@{
    ViewData["Title"] = "Edit category";
}

<div class="container">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" method="post">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 mt-2">
                    <input type="submit" value="Edit" class="btn btn-success"/>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Categories" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
