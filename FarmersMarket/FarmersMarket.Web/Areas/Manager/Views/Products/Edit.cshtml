@using FarmersMarket.Models.ViewModels
@model ProductViewModel

@{
    ViewData["Title"] = "Edit product";
}

<div class="container">
    <div class="col-md-4">
        <form asp-area="Manager" asp-controller="Products" asp-action="Edit" method="post">
            <h2 class="form-signin-heading">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price" class="control-label"></label>
                <input asp-for="@Model.Price" type="number" min="1" step="any" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Unit" class="control-label"></label>
                <input asp-for="@Model.Unit" class="form-control" />
                <span asp-validation-for="@Model.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quantity" class="control-label"></label>
                <input asp-for="@Model.Quantity" type="number" class="form-control" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl" class="control-label"></label>
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select class="form-select" name="CategoryId" asp-for="CategoryId" asp-items="@Model.Categories"></select>
                <span asp-validation-for="@Model.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 mt-2">
                    <input type="submit" value="Edit" class="btn btn-success"/>
                    <a class="btn btn-danger" asp-area="Manager" asp-controller="Products" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

